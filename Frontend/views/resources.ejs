<!-- views/resources.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Resources</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel=" stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .navbar {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-bottom: 30px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin-right: 10%;
            margin-top: 1%;
        }

        .navbar a {
            text-decoration: none;
            background-color: #4e67e8;
            color: white;
            padding: 10px 18px;
            border-radius: 6px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .navbar a:hover {
            background-color: #008218;
        }

        .quizbutton {
            background-color: #4e67e8;
        }

        .quizbutton:hover {
            background-color: #008218;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <a href="/profile"><i class="fa-solid fa-user"></i> Profile</a>
        <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
    </div>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Resources for <b>
                <%= stream %>
            </b>
        </h2>
        <div class="card shadow p-4">
            <ul class="list-group">
                <% resources.forEach(resource=> { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>
                            <%= resource.name %>
                        </strong>
                        <div>
                            <a href="<%= resource.google %>" class="btn btn-outline-primary btn-sm me-2"
                                target="_blank"> <b>Google</b> </a>
                            <a href="<%= resource.youtube %>" class="btn btn-outline-danger btn-sm" target="_blank">
                                <b>YouTube</b> </a>
                        </div>
                    </li>
                    <% }); %>
            </ul>
            <div class="mt-4 text-center">
                <a href="/mcq-quiz" class="quizbutton btn btn-success"> <i class="fa-solid fa-brain"></i> <b>Quiz</b> <i
                        class="fa-solid fa-arrow-right"></i> </a>
            </div>
        </div>
    </div>
</body>

</html>