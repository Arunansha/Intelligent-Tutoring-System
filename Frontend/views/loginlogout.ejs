<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login & Register</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    .auth-card {
      max-width: 400px;
      margin: 0 auto;
      padding: 15px;
      border-radius: 20px;
    }

    .nav-tabs .nav-link {
      color: gray;
    }

    .nav-tabs .nav-link.active {
      color: black;
      font-family: cursive;
    }

    .Welcome {
      font-family: cursive;
      font-weight: bolder;
    }

    .login:hover {
      background-color: #000dfdcb;
    }

    .Register:hover {
      background-color: rgb(4, 188, 4);
    }

    .password-toggle {
      position: absolute;
      right: 15px;
      top: 38px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .password-input {
      transition: all 0.3s ease;
    }

    .password-input[type="password"] {
      letter-spacing: 0.15em;
    }

    .password-toggle:hover {
      transform: scale(1.2);
      color: #0d6efd;
    }

    .important-message {
      margin-top: -2%;
      background-color: #fff3cd;
      color: #856404;
      border: 1px solid #ffeeba;
      padding: 15px 20px;
      border-radius: 5px;
      font-size: 1.1rem;
    }

    .footer-logo {
      max-width: 40px;
      height: auto;
    }

    .footer-section {
      margin-top: 30px;
      text-align: center;
    }

    .copyright-text {
      margin-left: 1%;
      display: inline-block;
      font-size: 0.9rem;
      color: #6c757d;
      padding-top: 10px;
    }

    .forgot-password {
      font-size: 0.9rem;
      text-align: center;
      margin-top: 10px;
    }

    .forgot-password a {
      color: #0d6efd;
      text-decoration: none;
    }

    .forgot-password a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <div class="container mt-5">
    <div id="registerNotice" class="important-message text-center" style="display: none;">
      <strong>ðŸ“¢ Important:</strong> Username is your certificate candidate name.
      Email and username are your login and forget password credentials.
    </div>
    <br>
    <div class="card shadow auth-card">
      <div class="card-header text-center">
        <h2 class="Welcome">Welcome</h2>
        <p class="text-muted">to EduStream</p>
      </div>
      <div class="card-body">
        <ul class="nav nav-tabs" id="authTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button"
              role="tab" aria-controls="login" aria-selected="true">
              Login <i class="fa-solid fa-right-to-bracket"></i>
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button"
              role="tab" aria-controls="register" aria-selected="false">
              <i class="fa-regular fa-id-card"></i> Register
            </button>
          </li>
        </ul>

        <div class="tab-content mt-4" id="authTabsContent">
          <!-- Login Form with Email -->
          <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
            <form action="/login" method="post">
              <div class="mb-3">
                <label for="loginEmail" class="form-label">Email</label>
                <input name="email" placeholder="enter your email" type="email" class="form-control" id="loginEmail"
                  required>
              </div>
              <div class="mb-3">
                <label for="loginUsername" class="form-label">Username</label>
                <input name="username" placeholder="enter your username" type="text" class="form-control"
                  id="loginUsername" required>
              </div>
              <div class="mb-3 position-relative">
                <label for="loginPassword" class="form-label">Password</label>
                <input name="password" placeholder="enter your password" type="password"
                  class="form-control password-input" id="loginPassword" required>
                <i class="fa-solid fa-eye password-toggle" id="toggleLoginPassword"></i>
              </div>
              <button type="submit" class="btn btn-primary w-100 login">
                <b>Login</b> <i class="fa-solid fa-arrow-right"></i>
              </button>
            </form>

            <div class="forgot-password">
              <a href="/forgotpassword">Forgot Password?</a>
            </div>
          </div>

          <!-- Register Form -->
          <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
            <form id="registerForm">
              <div class="mb-3">
                <label for="registerUsername" class="form-label">Username</label>
                <input name="username" placeholder="enter your new username" type="text" class="form-control"
                  id="registerUsername" required>
              </div>
              <div class="mb-3">
                <label for="registerEmail" class="form-label">Email</label>
                <input name="email" placeholder="enter your email address" type="email" class="form-control"
                  id="registerEmail" required>
              </div>
              <div class="mb-3 position-relative">
                <label for="registerPassword" class="form-label">Password</label>
                <input name="password" placeholder="enter your new password" type="password"
                  class="form-control password-input" id="registerPassword" required>
                <i class="fa-solid fa-eye password-toggle" id="toggleRegisterPassword"></i>
              </div>
              <button type="submit" class="btn btn-success w-100 Register">
                <b>Register</b> <i class="fa-solid fa-arrow-right"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
      <div class="card-footer text-center text-muted">
        <div class="d-flex justify-content-center align-items-center">
          <img src="educationlogocertificate.png" alt="Logo" class="footer-logo">
          <div class="copyright-text">
            &copy; 2025 EduStream. All rights reserved.
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

  <script>
    // Password show/hide toggle
    const toggleLoginPassword = document.getElementById('toggleLoginPassword');
    const loginPasswordField = document.getElementById('loginPassword');
    toggleLoginPassword.addEventListener('click', () => {
      const type = loginPasswordField.type === 'password' ? 'text' : 'password';
      loginPasswordField.type = type;
      toggleLoginPassword.classList.toggle('fa-eye-slash', type === 'text');
      toggleLoginPassword.classList.toggle('fa-eye', type === 'password');
    });

    const toggleRegisterPassword = document.getElementById('toggleRegisterPassword');
    const registerPasswordField = document.getElementById('registerPassword');
    toggleRegisterPassword.addEventListener('click', () => {
      const type = registerPasswordField.type === 'password' ? 'text' : 'password';
      registerPasswordField.type = type;
      toggleRegisterPassword.classList.toggle('fa-eye-slash', type === 'text');
      toggleRegisterPassword.classList.toggle('fa-eye', type === 'password');
    });

    // Register form submission
    document.getElementById('registerForm').addEventListener('submit', async function (event) {
      event.preventDefault();
      const username = document.getElementById('registerUsername').value;
      const email = document.getElementById('registerEmail').value;
      const password = document.getElementById('registerPassword').value;
      try {
        const response = await fetch('/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username, email, password })
        });
        const data = await response.json();
        if (response.ok) {
          alert('You are registered successfully, now login for stream selection');
          document.getElementById('login-tab').click(); // Switch to login tab
        } else {
          alert(data.message || 'Registration failed');
        }
      } catch (error) {
        alert('Server error, please try again later');
      }
    });

    // Info message toggle
    const registerTab = document.getElementById('register-tab');
    const loginTab = document.getElementById('login-tab');
    const notice = document.getElementById('registerNotice');

    registerTab.addEventListener('click', () => {
      notice.style.display = 'block';
    });

    loginTab.addEventListener('click', () => {
      notice.style.display = 'none';
    });
  </script>
</body>

</html>
